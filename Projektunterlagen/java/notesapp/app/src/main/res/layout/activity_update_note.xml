<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#00FFFFFF"
            android:title="Notiz akualisieren"
            android:titleTextColor="@android:color/white"
            app:navigationIcon="@android:drawable/ic_menu_revert" />

        <!-- Titel zum Finden der Notizen -->
        <EditText
            android:id="@+id/edit_search_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Titel der Notiz (wird nicht geÃ¤ndert)" />

        <!-- Neuer Inhalt -->
        <EditText
            android:id="@+id/edit_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="5"
            android:gravity="top"
            android:hint="Neuer Inhalt" />

        <!-- Neue Kategorie -->
        <Spinner
            android:id="@+id/spinner_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Button zum Aktualisieren -->
        <Button
            android:id="@+id/btn_update_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notiz(en) aktualisieren" />
    </LinearLayout>
</ScrollView>

